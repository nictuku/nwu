"""Command line interface program to administer an NWU server
"""

import sys
from nwu_server.cli import Commands
from nwu_server.config import read_config

def main():
    # TODO: make this path configurable
    config = read_config('/etc/nwu/server.conf')
    nwu_cli = Commands(config)
    if len(sys.argv) == 1:
        nwu_cli.usage()
    command = 'cmd_' + sys.argv[1]
    if not hasattr(nwu_cli, command):
        nwu_cli.usage()
    run_command = getattr(nwu_cli, command)
    output = run_command(*sys.argv[2:])
    if output:
        print output


if __name__ == '__main__':
    main()
